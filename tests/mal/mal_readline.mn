//	while c != 10 && c != 13 {
//		c = [NL_sys getch:true]
//		str += " "
//		$sset(str, $ssize(str)-1, c)
//	}
	var str = " ", stdin = [NL_file stdin], len = 0, ch
	while true {
		try ch = [NL_file read_char:stdin] catch _ break;
		if ch == 10 break;
		str += " "
		if $sset(str, len, ch) == null break else len += 1
	}
	
	return str
}